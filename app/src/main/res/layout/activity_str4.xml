<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Str4">


    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="53dp"
        android:layout_below="@+id/rcView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="112dp"
        android:backgroundTint="#fff"
        android:onClick="toNewNote"
        android:text="Добавить воспоминание"
        android:textColor="@color/black"
        android:textSize="20dp" />


    <View
        android:id="@+id/view2"
        android:layout_width="384dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"


        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="182dp"
        android:background="@drawable/rounded_white_rectangle"
        app:layout_constraintVertical_bias="0.727" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcView"
        android:layout_width="wrap_content"
        android:layout_height="468dp"
        android:layout_alignStart="@+id/view2"
        android:layout_alignTop="@+id/view2"
        android:layout_alignEnd="@+id/view2"
        android:layout_alignBottom="@+id/view2"
        android:layout_marginStart="13dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="28dp" />


    <Button
        android:id="@+id/imageButton"
        android:layout_width="378dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="61dp"
        android:backgroundTint="#fff"
        android:contentDescription="@string/app_name"
        android:onClick="toMap"
        android:text="Открыть карту"
        android:textColor="@color/black"
        android:textSize="20dp" />


</RelativeLayout>
